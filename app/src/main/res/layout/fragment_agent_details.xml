<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:text="The following agent has been allocated to you."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_agent_alocation_message" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp" app:srcCompat="@drawable/ic_person_black_24dp"
                android:id="@+id/img_agent_picture" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_agent_alocation_message" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintDimensionRatio="w,1:1"/>
        <TextView
                android:text="Agent Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_agent_name" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/img_agent_picture"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
        />
        <TextView
                android:text="Agent Number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_agent_number" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_agent_name"
                app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="veh Reg Number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_veh_reg_number" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_agent_number" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Vehicle Make"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_vehicle_make" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_veh_reg_number" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Vehicle Color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_vehicle_color" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/label_vehicle_make" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/guideline9"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="You will be notified if there are any changes regarding the agent."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/label_agent_changes_message" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/label_vehicle_color"/>
        <Button
                android:text="@string/continue_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button3" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/label_agent_changes_message"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" style="@style/Button_Solid"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
        <android.support.constraint.Guideline
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/guideline9" app:layout_constraintGuide_begin="138dp"
                android:orientation="vertical"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_agent_name"
                app:layout_constraintTop_toTopOf="@+id/label_agent_name"
                app:layout_constraintBottom_toBottomOf="@+id/label_agent_name"
                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" tools:text="John Doe"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_agent_number"
                app:layout_constraintTop_toTopOf="@+id/label_agent_number"
                app:layout_constraintBottom_toBottomOf="@+id/label_agent_number"
                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" tools:text="123456789"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_veh_reg_number"
                app:layout_constraintTop_toTopOf="@+id/label_veh_reg_number"
                app:layout_constraintBottom_toBottomOf="@+id/label_veh_reg_number"
                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" tools:text="ABV-123 GP"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_vehicle_make"
                app:layout_constraintTop_toTopOf="@+id/label_vehicle_make"
                app:layout_constraintBottom_toBottomOf="@+id/label_vehicle_make"
                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" tools:text="Toyota"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_vehicle_color"
                app:layout_constraintTop_toTopOf="@+id/label_vehicle_color"
                app:layout_constraintBottom_toBottomOf="@+id/label_vehicle_color"
                app:layout_constraintStart_toStartOf="@+id/guideline9" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" tools:text="Silver"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
