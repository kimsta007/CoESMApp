<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:text="@string/select_your_property_type_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_property_type_message" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textAlignment="center" android:textSize="18sp"/>
    <ImageView
            android:layout_width="50dp"
            android:contentDescription="@string/complex_name"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_commercial_city_black_24dp"
            android:id="@+id/imageView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_property_type_message"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/complex_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_address_complex"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" style="@style/Button_Solid"/>
    <ImageView
            android:layout_width="50dp"
            android:contentDescription="@string/stand_alone_house_name"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_complex_black_24dp"
            android:id="@+id/imageView2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/stand_alone_house_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_address_stand_alone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" style="@style/Button_Solid"/>
    <ImageView
            android:layout_width="50dp"
            android:contentDescription="@string/commercial_property_name"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_commercial_city_black_24dp"
            android:id="@+id/imageView3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/commercial_property_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_address_commecial"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" style="@style/Button_Solid"/>
</android.support.constraint.ConstraintLayout>